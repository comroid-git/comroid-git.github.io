<UserControl
    x:Class="status_app.ServiceBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:status_app"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="122"
    d:DesignWidth="800">
    <StackPanel Background="{ThemeResource AppBarItemPointerOverBackgroundThemeBrush}" Margin="35 15">
        <TextBlock Text="{Binding ServiceName}" Style="{StaticResource TitleTextBlockStyle}" FontSize="25"
                   Name="ServiceNameLabel"
                   Padding="0 9" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                   TextAlignment="Center" />
        <TextBlock Text="{Binding StatusText}" Foreground="{Binding StatusColor}" Style="{StaticResource BodyTextBlockStyle}" FontSize="18" Padding="0 7"
                   Name="StatusTextLabel"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Center" />
    </StackPanel>
</UserControl>
